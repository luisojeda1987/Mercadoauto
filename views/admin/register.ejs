<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>

    <body>
        <div class="container">
            <form action="" method="POST">
                <div class="container">
                    <div class="row justify-content-center text-center">
                        <h2 class="my-5">Registro</h2>
                        <div class="col-12 col-md-6">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="floatingInput" placeholder="Username"
                                    name="username" />
                                <label for="floatingInput">Username</label>
                                <span class="text-danger"><%= (typeof errores != 'undefined' && errores.username)?errores.username.msg : "" %> </span>
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="form-floating">
                                <input type="password" class="form-control" id="floatingPassword" placeholder="Password"
                                    name="pass" />
                                <label for="floatingPassword">Password</label>
                                <span class="text-danger"><%= (typeof errores != 'undefined' && errores.pass)?errores.pass.msg : "" %> </span>
                            </div>
                        </div>
                        <div class="col-12 col-md-6 my-4">
                            <div class="form-floating">
                                <button class="btn btn-primary" type="submit">
                                    Registrarse
                                </button>
                                <a href="/"><button class="btn btn-secondary" type="button">
                                        Volver
                                    </button></a>
                            </div>
                        </div>
                        <div class="col-12 col-md-6 my-4">
                            <div class="form-floating">
                                <p>
                                    ¿Estás registrado? <a href="/admin/login">Inicia sesión</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <%- include('./partials/footer') %>
    </body>

</html>