<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head')  %> 
<body>
    <%- include('./partials/header')  %> 

    <div class="container">
        <form action="/admin/autos/update/<%= auto.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <h3>Agregar</h3>
            <hr>
            <div class="row">
              <div class="col-md-6 col-lg-4">
                <div class="form-floating mb-3">
                  <input type="text" class="form-control" id="modelo" placeholder="marca" name="marca" value="<%= auto.marca %>">
                  <label for="modelo">Marca</label>
                </div>
              </div>
              <div class="col-md-6 col-lg-4">
                <div class="form-floating mb-3">
                  <input type="text" class="form-control" id="modelo" placeholder="modelo" name="modelo" value="<%= auto.modelo %> ">
                  <label for="modelo">Modelo</label>
                </div>
              </div>
              <div class="col-md-6 col-lg-4">
                <div class="form-floating mb-3">
                  <input type="text" min="2000" max="2021" class="form-control" id="anio" placeholder="año" name="anio" value="<%= auto.anio %> ">
                  <label for="anio">Año</label>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-floating mb-3">
                  <input type="text" class="form-control" id="color" placeholder="color" name="color" value="<%= auto.color %> ">
                  <label for="color">Color</label>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="form-floating mb-3">
                  <div class="">
                    
                    <input class="form-control" type="file" id="formFile" name="img">
                    <label for="" class="text-right"><%= auto.img %></label>
                  </div>
                </div>
              </div>
            
            </div>
          
            <div class="d-grid gap-2">
              <button class="btn btn-success" type="submit">Guardar cambios</button>
            </div>
          
           
            </form>
    </div>
 
    <%- include('./partials/footer')  %> 

</body>
</html>