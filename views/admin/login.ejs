<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head')  %> 
<body>

    <div class="container">
        <form action="" method="POST" >
            <div class="container">
                <div class="row justify-content-center text-center">
                    <h2 class="my-5">Login</h2>
                    <div class="col-12 col-md-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Username" name="username">
                            <label for="floatingInput">Username</label>
                            <span class="text-danger"><%= (typeof errores != 'undefined' && errores.username)?errores.username.msg : "" %> </span>
                          </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-floating">
                            <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="pass">
                            <label for="floatingPassword">Password</label>
                            <span class="text-danger"><%= (typeof errores != 'undefined' && errores.pass)?errores.pass.msg : "" %> </span>

                          </div>
                    </div>
                    <div class="col-12 col-md-6 my-4">
                        <div class="form-floating">
                            <button class="btn btn-primary" type="submit">Iniciar sesión</button>
                            <a href="/"><button class="btn btn-secondary" type="button">Volver</button></a> 

                          </div>
                          <div class="form-check d-flex justify-content-center mt-4">
                            <input class="form-check-input" type="checkbox" id="flexCheckDefault" name="recordar">
                            <label class="form-check-label mr-2" for="flexCheckDefault">
                              Recordarme
                            </label>
                          </div>
                    </div>
                    <div class="col-12 col-md-6 my-4">
                        <div class="form-floating">

                            <p>¿No estás registrado? <a href="/admin/register">Registrate</a></p>
                          </div>
                          <span class="text-danger"><%= (typeof errores != 'undefined' && errores.error)?errores.error.msg : "" %> </span>
                    </div>
                    
                </div>
            </div>
        </form>
    </div>
 

    <%- include('./partials/footer')  %> 

</body>
</html>